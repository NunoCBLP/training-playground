pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                scripts {
                	def buildConfigs = readJSON text: '[{"name":"namejava", "command":"echo \'command]
                	buildConfigs.each{ buildConfig ->
				stage('buildConfig.name'({
					steps{ 
						buildConfig.name 
					}
				}
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
