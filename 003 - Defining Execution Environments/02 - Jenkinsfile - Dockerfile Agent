pipeline {
    agent { 
    		dockerfile {
			filename '003 - Defining Execution Environments'
			dir '02 - Dockerfile - Dockerfile Agent'
			label ''
			additionalBuildArgs ''--build-arg "ENV_VARIABLE=Value for build"''
			args ''
		}
	}
    stages {
        stage('build') {
            steps {
                sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
            }
        }
    }
}
