pipeline {
    agent { 
    	dockerfile {
		filename ''
		dir '02 - Dockerfile - Dockerfile Agent'
		label '003 - Defining Execution Environments'
		additionalBuildArgs ''--build-arg "ENV_VARIABLE=Value for execution"''
		args ''
	}
    stages {
        stage('build') {
            steps {
                sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
            }
        }
    }
}
